{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./",
    "rootDir": "src",
    "outDir": "lib",
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["src/**/*"]
}
